img = cv.imread("./STANDARD.jpg")

height = img.shape[0]
width = img.shape[1]

#Divide veritcally
width_cutoff = width // 2
#Left side of image
s1 = img[:, :width_cutoff]
#Right side of image
s2 = img[:, width_cutoff:]

#Divide Horizontally
height_cutoff = height // 2
s3 = img [:, :height_cutoff]
s4 = img [:, height_cutoff:]



cv.imshow("image", s3)
cv.waitKey(0)
        
