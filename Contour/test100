import cv2
import numpy as np

# Load the image
img = cv2.imread("STANDARD1.jpg")

# Convert the image to a grayscale
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

# Define the object you want to detect (in this case, a banana)
template = cv2.imread("STANDARD1.jpg", 0)

# Get the width and height of the template
w, h = template.shape[::-1]

# Use the matchTemplate function to detect the object
res = cv2.matchTemplate(gray, template, cv2.TM_CCOEFF_NORMED)

# Set a threshold for detection
threshold = 0.8

# Find locations of the object in the image
loc = np.where(res >= threshold)

# Create a mask with the same size as the image
mask = np.zeros_like(img)

# Loop through the locations and draw a rectangle on the mask
for pt in zip(*loc[::-1]):
    cv2.rectangle(mask, pt, (pt[0] + w, pt[1] + h), (0,255,0), 2)

# Apply the mask to the original image
result = cv2.bitwise_and(img, mask)

# Show the result
cv2.imshow("Result", result)
cv2.waitKey(0)
cv2.destroyAllWindows()